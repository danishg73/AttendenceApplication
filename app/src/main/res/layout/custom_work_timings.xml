<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skyblue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Work_Time"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="@string/Shift_Name"
            >
        </TextView>
        <EditText
            android:id="@+id/shift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@drawable/edittext_round"
            android:layout_weight="1">

        </EditText>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="@string/Days"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/days"
                    android:text="@string/Monday">
                </TextView>
                <TextView

                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/days"
                    android:text="@string/Tuesday">
                </TextView>
                <TextView

                    android:id="@+id/wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/days"
                    android:text="@string/Wedneday">
                </TextView>
                <TextView

                    android:id="@+id/thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/days"
                    android:text="@string/Thursday">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView

                    android:id="@+id/friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/days"
                    android:text="@string/Friday">
                </TextView>
                <TextView

                    android:id="@+id/saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/days"
                    android:text="@string/Saturday">
                </TextView>
                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/days"
                    android:text="@string/Sunday">
                </TextView>

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b7b7b7"

                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Select_Start_Time"
                android:textColorHint="@android:color/black"
                android:padding="12dp"
                android:gravity="center"
                android:inputType="datetime"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/starttime"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="#b7b7b7"
                android:layout_marginBottom="5dp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b7b7b7"
                android:layout_marginTop="5dp"

                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Select_End_Time"
                android:textColorHint="@android:color/black"
                android:padding="12dp"
                android:gravity="center"
                android:inputType="datetime"
                android:id="@+id/endtime"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="#b7b7b7"
                android:layout_marginBottom="5dp"/>



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/cancel"
            android:background="@drawable/lv_blue"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Create_Shift"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/timeadded"
            android:background="@drawable/lv_blue"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"/>



    </LinearLayout>


</LinearLayout>